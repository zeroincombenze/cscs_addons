<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <menuitem id="menu_wordpress_root" icon="terp-hr" name="Wordpress Site" sequence="15"
            web_icon="images/wordpress.png"
            web_icon_hover="images/wordpress-hover.png"
            groups="base.group_user"/>
        
        <menuitem id="menu_wordpress_main" parent="menu_wordpress_root" name="Site" sequence="0"/>
        
        <!--
        ==========
        Wordpress site
        ==========
        -->
        <record id="view_wordpressform" model="ir.ui.view">
            <field name="name">wordpress.view_wordpressform</field>
            <field name="model">openerp.wordpress</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Site" >
                    <group colspan="4" col="8">
                        <html>
							<iframe src="http://carlosecv.wordpress.com/" scrolling="yes" frameborder="0" style="width:1000px; height:1000px;" allowTransparency="true"></iframe>                                  
                        </html>  
                    </group>
                </form>
            </field>
        </record>
        
        <record id="wordpress_action_form" model="ir.actions.act_window">
            <field name="name">Site</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">openerp.wordpress</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wordpressform"/>
        </record>
        
        <menuitem action="wordpress_action_form" id="menu_open_wordpress_my" sequence="5" parent="menu_wordpress_main"/>
        
        <!--
        ==========
        Wordpress admin site
        ==========
        -->
        <record id="view_wordpressadminform" model="ir.ui.view">
            <field name="name">wordpress.view_wordpressadminform</field>
            <field name="model">openerp.wordpress</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Admin Site" >
                    <group colspan="4" col="8">
                        <html>
							<a href="http://wordpress.com/wp-admin/" target="_blank" >Go to administration site</a>
                        </html>  
                    </group>
                </form>
            </field>
        </record>
        
        <record id="wordpress_action_adminform" model="ir.actions.act_window">
            <field name="name">Admin Site</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">openerp.wordpress</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wordpressadminform"/>
        </record>
       
        <menuitem action="wordpress_action_adminform" id="menu_open_wordpress_adminmy" sequence="10" parent="menu_wordpress_main"/>
        
    </data>
</openerp>
